{
  "manifest_version": 3,
  "name": "TextGrow - Text Shortcut Expander",
  "version": "1.0.0",
  "description": "Expand text shortcuts instantly across all websites. Create, sync, and manage your text snippets with ease.",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "https://lkpdmllkksgybuwipkjf.supabase.co/*",
    "https://text-grow.vercel.app/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "TextGrow"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "externally_connectable": {
    "matches": [
      "https://text-grow.vercel.app/*",
      "https://lkpdmllkksgybuwipkjf.supabase.co/*"
    ]
  }
}